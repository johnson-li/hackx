<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/call_btn_group" android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
	android:background="@drawable/bg_conference_share">

    <!-- 每个按钮右上角有个未读消息的红色按钮，是为了以后“即时消息”不在
                        受多媒体会场的限制的扩展而设置的 -->
		
		<RelativeLayout android:layout_height="fill_parent"
			android:id="@+id/main_layout_five" android:layout_weight="1.0"
			android:layout_width="wrap_content">
			<Button android:layout_width="wrap_content" android:layout_centerVertical="true"
				android:layout_centerHorizontal="true" android:focusable="false"
				android:layout_height="wrap_content" android:background="@drawable/icon_record_disable"
				android:id="@+id/media_btn_five" android:layout_weight="1" />
			<TextView android:id="@+id/unread_msg_count_five"
				android:layout_width="20dp" android:layout_height="18dp"
				android:layout_marginTop="2.66dp" android:layout_marginRight="2.66dp"
				android:layout_alignRight="@+id/media_btn_five" android:background="@drawable/red_shape"
				android:gravity="center_vertical|center_horizontal" android:text="2"
				android:textColor="@color/white" android:textSize="12sp"
				android:visibility="gone" />
		</RelativeLayout>

		<RelativeLayout android:layout_height="fill_parent"
			android:id="@+id/main_layout_four" android:layout_weight="1.0"
			android:layout_width="wrap_content">
			<ImageView android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:src="@drawable/conference_line_shu"
				android:scaleType="fitXY" />
			<Button android:layout_width="wrap_content"  android:layout_centerVertical="true"
				android:layout_height="wrap_content" android:background="@drawable/icon_callkeep_disable"
				android:id="@+id/media_btn_four" android:layout_weight="1"
				android:layout_centerHorizontal="true" android:focusable="false" />
			<TextView android:id="@+id/unread_msg_count_four"
				android:layout_width="20dp" android:layout_height="18dp"
				android:layout_marginTop="2.66dp" android:layout_marginRight="2.66dp"
				android:layout_alignRight="@+id/media_btn_four" android:background="@drawable/red_shape"
				android:gravity="center_vertical|center_horizontal" android:text="2"
				android:textColor="@color/white" android:textSize="12sp"
				 android:visibility="gone" />
		</RelativeLayout>

		<RelativeLayout android:layout_height="fill_parent"
			android:id="@+id/main_layout_three" android:layout_weight="1.0"
			android:layout_width="wrap_content">
			<ImageView android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:src="@drawable/conference_line_shu"
				android:scaleType="fitXY" />

			<Button android:layout_width="wrap_content" android:layout_centerVertical="true"
				android:layout_height="wrap_content" android:background="@drawable/icon_stop_disable"
				android:id="@+id/media_btn_three" android:layout_weight="1"
				android:layout_centerHorizontal="true" android:focusable="false" />
			<TextView android:id="@+id/unread_msg_count_three"
				android:layout_width="20dp" android:layout_height="18dp"
				android:layout_marginTop="2.66dp" android:layout_marginRight="2.66dp"
				android:layout_alignRight="@+id/media_btn_three" android:background="@drawable/red_shape"
				android:gravity="center_vertical|center_horizontal" android:text="2"
				android:textColor="@color/white" android:textSize="12sp"
				android:visibility="gone"  />
		</RelativeLayout>

		<RelativeLayout android:layout_height="fill_parent"
			android:id="@+id/main_layout_two" android:layout_weight="1.0"
			android:layout_width="wrap_content">
			<ImageView android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:src="@drawable/conference_line_shu"
				android:scaleType="fitXY" />

			<Button android:layout_height="wrap_content" android:layout_centerVertical="true"
				android:background="@drawable/icon_mute_disable"
				android:layout_centerHorizontal="true" android:focusable="false"
				android:layout_width="wrap_content" android:id="@+id/media_btn_two"
				android:layout_weight="1"></Button>
			<TextView android:id="@+id/unread_msg_count_two"
				android:layout_width="20dp" android:layout_height="18dp"
				android:layout_marginTop="2.66dp" android:layout_marginRight="2.66dp"
				android:layout_alignRight="@+id/media_btn_two" android:background="@drawable/red_shape"
				android:gravity="center_vertical|center_horizontal" android:text="2"
				android:textColor="@color/white" android:textSize="12sp"
				android:visibility="gone" />
		</RelativeLayout>

		<RelativeLayout android:layout_height="fill_parent"
			android:id="@+id/main_layout_one" android:layout_weight="1.0"
			android:layout_width="wrap_content">
			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/conference_line_shu"
				android:scaleType="fitXY" />

			<Button android:layout_width="wrap_content" android:layout_centerVertical="true"
				android:layout_height="fill_parent" android:background="@drawable/icon_calling_disable"
				android:id="@+id/media_btn_one" android:layout_weight="1"
				android:layout_centerHorizontal="true" android:focusable="false" />
			<TextView android:id="@+id/unread_msg_count_one"
				android:layout_width="20dp" android:layout_height="18dp"
				android:layout_marginTop="2.66dp" android:layout_marginRight="2.66dp"
				android:layout_alignRight="@+id/media_btn_one" android:background="@drawable/red_shape"
				android:gravity="center_vertical|center_horizontal" android:text="2"
				android:textColor="@color/white" android:textSize="12sp"
				android:visibility="gone" />
		</RelativeLayout>

</LinearLayout>
