<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center"
	android:id="@+id/more_txt_ll">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="46dp" android:gravity="center_vertical">

		<ImageView android:id="@+id/more_item_image"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="9.34dp" android:background="@drawable/media_home"
			android:layout_marginLeft="10dp" android:layout_centerVertical="true" />

		<TextView android:id="@+id/media_unread_msg_count"
				android:layout_width="20dp" android:layout_height="18dp"
				android:background="@drawable/red_shape" 
				android:layout_marginRight="5dp" android:layout_centerVertical="true"
				android:gravity="center_vertical|center_horizontal" android:text="40"
				android:layout_margin="2dp" android:textColor="@color/white"
				android:textSize="12sp" android:layout_alignParentRight="true"/>
		
		<TextView android:id="@+id/more_item_txt" android:layout_toLeftOf="@id/media_unread_msg_count"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:textSize="16sp" 
			android:singleLine="true" android:text="返回主页" android:layout_marginRight="5dp"
			android:layout_toRightOf="@id/more_item_image"
			android:layout_centerVertical="true" />
	</RelativeLayout>
</LinearLayout>
